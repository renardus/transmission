<p id="notice"></p>

<div class="row">
  <div class="col-md-7">
    <div class="panel panel-primary">
      <div class="panel-heading"><h1>Source <%= @source.name %></h1></div>
      <div class="panel-body">
        <table class="table table-striped table-bordered">
          <thead><tr class="success"><th>Remarks</th></tr></thead>
          <tbody><tr> <td><%= @source.remarks %></td> </tr></tbody>
        </table>

        <table class="table table-striped table-bordered">
          <thead>
            <tr class="success">
              <th>Descriptor</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <% @source.descriptors.each do |descriptor| %>
              <tr>
                <td><%= link_to descriptor.name, descriptor %></td>
                <td><%= descriptor.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="panel-footer">
        <%= link_to 'Edit', edit_source_path(@source) %> |
        <%= link_to 'Destroy', @source, method: :delete, data: { confirm: 'Are you sure?' } %> |
        <%= link_to 'Back', sources_path %>
      </div>
    </div>
  </div>
</div>
