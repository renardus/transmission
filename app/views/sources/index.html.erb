<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-8">
    <div class="panel panel-primary">
      <div class="panel-heading"><h3>Sources</h3></div>
      <div class="panel-body">
        <table class="table table-striped table-bordered">
          <thead>
            <tr class="success">
              <th>Source</th>
              <th>Remarks</th>
            </tr>
          </thead>

          <tbody>
            <% @sources.each do |source| %>
              <tr>
                <td><%= link_to source.name, source %></td>
                <td><%= source.remarks %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
  </div>
</div>

<br>

<%= link_to 'New Source', new_source_path , {role:'button', class:'btn btn-primary active'} %>
